  <script>
    function toggleNewConnectionFields() {
      const sel = document.getElementById('newConnectionType');
      const ppp = document.getElementById('newPppoeField');
      const sta = document.getElementById('newStaticField');
      if (!sel) return;
      if (sel.value === 'static') { ppp.style.display = 'none'; sta.style.display = 'block'; }
      else { ppp.style.display = 'block'; sta.style.display = 'none'; }
    }
    // Toggle connection type fields
    function toggleConnectionFields() {
      const connectionType = document.getElementById('connectionType').value;
      const pppoeField = document.getElementById('pppoeField');
      const staticIpField = document.getElementById('staticIpField');
      const pppoeInput = document.getElementById('pppoeUsername');
      const staticIpInput = document.getElementById('staticIp');
      
      if (connectionType === 'static') {
        pppoeField.style.display = 'none';
        staticIpField.style.display = 'block';
        pppoeInput.required = false;
        staticIpInput.required = true;
      } else {
        pppoeField.style.display = 'block';
        staticIpField.style.display = 'none';
        pppoeInput.required = true;
        staticIpInput.required = false;
      }
    }

    // Toggle edit connection type fields
    function toggleEditConnectionFields() {
      const connectionType = document.getElementById('editConnectionType').value;
      const pppoeField = document.getElementById('editPppoeField');
      const staticIpField = document.getElementById('editStaticIpField');
      
      if (connectionType === 'static') {
        pppoeField.style.display = 'none';
        staticIpField.style.display = 'block';
      } else {
        pppoeField.style.display = 'block';
        staticIpField.style.display = 'none';
      }
    }

    // Copy Mikrotik Script to clipboard
    function copyMikrotikScript() {
      const scriptTextarea = document.getElementById('mikrotikScript');
      scriptTextarea.select();
      scriptTextarea.setSelectionRange(0, 99999); // For mobile devices

      try {
        document.execCommand('copy');
        
        // Show success feedback
        const button = event.target.closest('button');
        const originalText = button.innerHTML;
        button.innerHTML = '<i class="bi bi-check"></i> Copied!';
        button.classList.remove('btn-primary');
        button.classList.add('btn-success');
        
        setTimeout(() => {
          button.innerHTML = originalText;
          button.classList.remove('btn-success');
