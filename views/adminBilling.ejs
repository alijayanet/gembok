      if (data.device_status === 'active') {
        deviceStatus.removeClass().addClass('badge bg-success').text('Aktif');
      } else {
        deviceStatus.removeClass().addClass('badge bg-danger').text('Tidak Aktif');
      }
      
      // Package info
