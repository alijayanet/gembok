      if (customer.package_price) {
        $('#detailPrice').text('Rp ' + parseFloat(customer.package_price).toLocaleString('id-ID'));
      } else {
        $('#detailPrice').text('-');
      }
      
      // Payment status
      const paymentStatus = $('#detailPaymentStatus');
      if (customer.payment_status === 'paid') {
        paymentStatus.removeClass().addClass('badge bg-success').text('Lunas');
      } else if (customer.payment_status === 'unpaid') {
        paymentStatus.removeClass().addClass('badge bg-warning').text('Belum Lunas');
      } else if (customer.payment_status === 'overdue') {
        paymentStatus.removeClass().addClass('badge bg-danger').text('Terlambat');
      } else {
        paymentStatus.removeClass().addClass('badge bg-secondary').text('-');
      }
      
