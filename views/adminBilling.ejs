         }
         
         // Update select all state
         function updateSelectAllState() {
           const checkedCount = document.querySelectorAll('.customer-checkbox:checked').length;
           const totalCount = customerCheckboxes.length;
           
           if (checkedCount === 0) {
             selectAllCheckbox.indeterminate = false;
             selectAllCheckbox.checked = false;
           } else if (checkedCount === totalCount) {
             selectAllCheckbox.indeterminate = false;
             selectAllCheckbox.checked = true;
           } else {
             selectAllCheckbox.indeterminate = true;
             selectAllCheckbox.checked = false;
           }
         }
       }
       
       // Delete single customer
       function deleteCustomer(phone, name) {
         if (confirm(`Yakin ingin menghapus pelanggan ${name} (${phone})?\n\nTindakan ini akan:\nâ€¢ Menghapus data pelanggan dari sistem billing\nâ€¢ Menghapus semua tagihan terkait\nâ€¢ Tidak akan mempengaruhi data di GenieACS\n\nLanjutkan?`)) {
           const form = document.createElement('form');
           form.method = 'POST';
           form.action = '/admin/billing/customers/delete';
           
           const phoneInput = document.createElement('input');
           phoneInput.type = 'hidden';
           phoneInput.name = 'phone';
           phoneInput.value = phone;
           
           form.appendChild(phoneInput);
           document.body.appendChild(form);
           form.submit();
         }
       }
       
       // Delete multiple selected customers
       function deleteSelectedCustomers() {
         const checkedCheckboxes = document.querySelectorAll('.customer-checkbox:checked');
         const selectedPhones = Array.from(checkedCheckboxes).map(cb => cb.value);
         
         if (selectedPhones.length === 0) {
           alert('Pilih pelanggan yang akan dihapus terlebih dahulu');
           return;
         }
         
         const confirmMessage = `Yakin ingin menghapus ${selectedPhones.length} pelanggan terpilih?\n\nTindakan ini akan:\nâ€¢ Menghapus data pelanggan dari sistem billing\nâ€¢ Menghapus semua tagihan terkait\nâ€¢ Tidak akan mempengaruhi data di GenieACS\n\nLanjutkan?`;
         
         if (confirm(confirmMessage)) {
           const form = document.createElement('form');
           form.method = 'POST';
           form.action = '/admin/billing/customers/delete-multiple';
           
           selectedPhones.forEach(phone => {
             const phoneInput = document.createElement('input');
             phoneInput.type = 'hidden';
             phoneInput.name = 'phones[]';
             phoneInput.value = phone;
             form.appendChild(phoneInput);
           });
           
           document.body.appendChild(form);
           form.submit();
         }
       }
