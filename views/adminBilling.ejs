          const dueDate = new Date(invoice.due_date);
          const isOverdue = dueDate < new Date() && invoice.status === 'unpaid';
          
          let statusBadge = '';
          if (invoice.status === 'paid') {
            statusBadge = '<span class="badge bg-success">Lunas</span>';
          } else if (isOverdue) {
            statusBadge = '<span class="badge bg-danger">Terlambat</span>';
          } else {
            statusBadge = '<span class="badge bg-warning">Belum Lunas</span>';
          }
          
          const row = `
            <tr>
              <td>${invoice.invoice_number}</td>
              <td>Rp ${parseFloat(invoice.amount).toLocaleString('id-ID')}</td>
              <td>${dueDate.toLocaleDateString('id-ID')}</td>
              <td>${statusBadge}</td>
            </tr>
          `;
          tableBody.append(row);
        });
      } else {
        $('#detailInvoicesTable').hide();
        $('#noInvoicesMessage').show();
      }
      
