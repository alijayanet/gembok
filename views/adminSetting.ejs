  }
  
  // Tampilkan loading state
  const submitBtn = $(this).find('button[type="submit"]');
  const originalText = submitBtn.text();
  submitBtn.prop('disabled', true).text('Uploading...');
  
  var formData = new FormData(this);
  $.ajax({
